{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/server.go",
            "args": [
                "--no-client"
            ],
        },
        {
            "name": "Client",
            "command": "npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceRoot}/app/web",
        },
        {
            "name": "Go: API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/apis/main.go",
            "args": []
        },
        {
            "name": "Node.js: API",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node/apis/index.mjs"
        },
        {
            "name": "Go: Contributions",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/contribs",
            "args": [],
            "env": {
                "GITHUB_ACCESS_TOKEN_CONTRIBS": "${input:github_access_token}"
            }
        },
        {
            "name": "Node.js: Contributions",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node/contribs/index.mjs",
            "env": {
                "GITHUB_ACCESS_TOKEN_CONTRIBS": "${input:github_access_token}"
            }
        },
        {
            "name": "Node.js: Contributions test",
            "type": "node",
            "request": "launch",
            "args": [
                "--test"
            ],
            "skipFiles": [
                "${workspaceFolder}/<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "program": "${workspaceFolder}/node/contribs/extract.test.mjs"
        }
    ],
    "inputs": [
        {
            "id": "github_access_token",
            "description": "Github access token",
            "type": "promptString"
        }
    ]
}