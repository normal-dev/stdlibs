{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/server.go",
            "args": [
                "--no-client"
            ],
        },
        {
            "name": "Client",
            "command": "npm run dev",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceRoot}/app/web",
        },
        {
            "name": "APIs Go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/apis.go",
            "args": []
        },
        {
            "name": "APIs Node.js",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node/apis/index.mjs"
        },
        {
            "name": "Contributions Go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/contribs.go",
            "args": [
                "main.go",
                "extractor.go",
                "license.go",
                "docs.go",
            ],
            "env": {
                "GITHUB_ACCESS_TOKEN_CONTRIBS": "${input:github_access_token}"
            }
        },
        {
            "name": "Contributions Node.js",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node/contribs/index.mjs",
            "env": {
                "GITHUB_ACCESS_TOKEN_CONTRIBS": "${input:github_access_token}"
            }
        }
    ],
    "inputs": [
        {
            "id": "github_access_token",
            "description": "",
            "type": "promptString"
        }
    ]
}